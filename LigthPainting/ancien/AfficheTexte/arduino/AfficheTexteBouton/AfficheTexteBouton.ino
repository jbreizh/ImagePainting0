// print the message
void printMessage(char message[], int messageSize) {
  Serial.print("message : ");
  Serial.println(message);
  Serial.print("size : ");
  Serial.println(messageSize);
  for (characterl = 0; characterl < messageSize - 1 ; characterl = characterl + 1) {
    character = message[characterl];
    Serial.print("character : ");
    Serial.println(character);
    for (layer = 0; layer < (length / NUMPIXELS); layer = layer + 1) {    //For each layer in the image
      for (blocH = 0; blocH < (BLOCS + 1) ; blocH = blocH + 1) {          //For each bloc Horizontal
        for (pixel = 0; pixel < (NUMPIXELS + 1) ; pixel = pixel + 1) {    //For each pixel
          gl = ((layer * (NUMPIXELS * 3)) + (pixel * 3) + 1);             //Get location of the current green pixel
          rl = ((layer * (NUMPIXELS * 3)) + (pixel * 3) + 0);             //Get location of the current red pixel
          bl = ((layer * (NUMPIXELS * 3)) + (pixel * 3) + 2);             //Get location of the current blue pixel
          chooseCharacter();
          for (blocV = 0; blocV < (BLOCS + 1) ; blocV = blocV + 1) {      //For each bloc Vertical
            pixels.setPixelColor(pixel * BLOCS + blocV , r, g, b);        //Set the pixel data
          }
        }
        pixels.show();
        delay(80);
      }
    }
  }
  Serial.println("cleaning...");
  for (pixel = 0; pixel < (NUMPIXELS * BLOCS + 1) ; pixel = pixel + 1) {   //Turns off all pixels at the end
    pixels.setPixelColor(pixel , 0, 0, 0);
  }
  pixels.show();
}

